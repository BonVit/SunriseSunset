<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/tvSearchResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/colorBackgroundRegular"
            android:ellipsize="end"
            android:paddingBottom="@dimen/gapRegular"
            android:paddingEnd="@dimen/gapSmall"
            android:paddingStart="@dimen/gapRegular"
            android:paddingTop="@dimen/gapSmall"
            android:singleLine="true"
            android:text="Test text"
            android:textColor="@color/colorTextRegular"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</layout>